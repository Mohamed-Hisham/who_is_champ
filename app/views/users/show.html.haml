.container
  .row.profile-info-user
    .ribbon.ribbon-blue.ribbon-large.ribbon-div
      .banner
        .text
          User
    .col-md-2
      = image_tag @user.avatar.url , class: "img-circle", :style => "width:140px;height:140px;"
    .col-md-8
      .row
        %h3 #{@user.name}
      .row
        .col-md-3
          -# %h4 #{@games.count} Badges
          %h4 4 Badges
        .col-md-5
          -# %h4 #{@games.count} Completed Rules
          %h4 20 Completed Rules

  .row
    .col-md-5
      .row
        %label{class: "game-list-title"} Games #{@game.name}
        = link_to "View Game", user_game_path(@user, @game), class: "pull-right btn btn-info", style: "margin-top:5px;margin-right:65px;"
      .row
        %label{class: "game-list-title"} Leaderboard position: 2
      %br
      .row
        %div{id: "rules", style: "height:270px;"}
          %table{class: "table table-hover table-condensed table-striped"}
            - 7.times do
              %tr
                %td
                  Rule 1
                %td
                  = link_to "Mark Complete", user_game_path(@user, @game), class: "btn btn-sm btn-success pull-left"

    .col-md-6.col-md-offset-1
      .row
        %label{class: "game-list-title"} Game Badges
      %br
