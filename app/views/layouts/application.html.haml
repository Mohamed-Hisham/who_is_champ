!!!
%html{lang: I18n.locale}
  %head
    %title Gamification
    = stylesheet_link_tag    "application-#{I18n.locale}", media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
  %body{class: "normal-wrapper"}
    .container-fluid
      = render "layouts/header"
    .container-fluid
      .row-fluid
        = render "layouts/flash_messages"
      .row-fluid
        = yield
    .home-wrapper.footer.navbar-fixed-bottom{style: "padding-top:5px;#{check_home}"}
      .container-fluid
        = render "layouts/footer"
