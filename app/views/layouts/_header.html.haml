%nav.navbar.navbar-fixed-top.navbar-inverse
  .navbar-innner
    .container-fluid
      - if admin_signed_in?
        %a.navbar-brand{href: admin_path(current_admin)} LOGO
        %ul.nav.navbar-nav
          -# %li.active
          -#   %a{href: "#"}
          -#     = t('nav.profile', default: 'Profile')
          -# %li
          -#   %a{href: "#"} Link
        .btn-group.pull-right{style: "padding-top:6px;"}
          .btn.btn-info.dropdown-toggle{data: {toggle: "dropdown"}}
            = current_admin.email
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to "Sign out", destroy_admin_session_path, method: :delete
      - else
        - if user_signed_in?
          %a.navbar-brand{href: user_path(current_user)} LOGO
          .pull-right{data: {"toggle" => "dropdown"}}
            = image_tag current_user.avatar.thumb.url, class: "header-avatar img-circle dropdown-toggle", :style => "width:50px;height:50px;"
            %i.fa.fa-caret-down
          %ul.dropdown-menu.pull-right
            %li
              = link_to "Profile Settings", edit_user_path(@user)
            %li
              = link_to "Sign out", destroy_user_session_path, method: :delete

        - else
          %a.navbar-brand{href: root_path} LOGO