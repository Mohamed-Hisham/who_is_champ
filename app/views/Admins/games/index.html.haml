.row
  %h2 All Games
.row
  %table{class: "table table-hover table-condensed table-striped login-wrap"}
    %thead
      %tr
        %th Game Name
        %th Creator Name
        %th
    - @games.each do |game|
      %tbody
        %tr
          %td
            = game.name
          %td
            = game.creator.name
          %td
            #{game.rules.count} Rules
          %td= link_to 'Destroy', admin_creator_path(@admin, game), :method => :delete, :data => { :confirm => 'Are you sure?' }

