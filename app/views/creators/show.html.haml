.container
  .row.profile-info
    .ribbon.ribbon-orange.ribbon-large.ribbon-div
      .banner
        .text
          Creator
    .col-md-2
      = image_tag @creator.avatar.url , class: "img-circle", :style => "width:140px;height:140px;"
    .col-md-8
      .row
        %h3 #{@creator.name}
      .row
        .col-md-3
          %h4 #{pluralize(@games.count, "Game")}
        .col-md-3
          %h4 #{pluralize(@rules_count, "Rule")}
        .col-md-5
          %h4 #{pluralize(@users_count, "Game Member")}
  %br
  .row
    .col-md-8
      .row
        %label{class: "game-list-title"} Games list
        = link_to "Create Game", new_creator_game_path(@creator), class: "pull-right btn btn-success"
      %br
      .row
        %div{id: "rules"}
          %table{class: "table table-hover table-condensed table-striped"}
            - if @games.any?
              - @games.each do |game|
                %tr
                  %td
                    = game.name
                  %td
                    #{pluralize(game.rules.count, "Rule")}
                  %td
                    = link_to "View Game", creator_game_path(@creator, game), class: "btn btn-info pull-left"
            - else
              %h4 No games created yet!